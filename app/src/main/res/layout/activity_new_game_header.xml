<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/game_skins_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="GAME SKIN"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/game_skins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@id/game_skins_text"
        android:spinnerMode="dropdown">
    </Spinner>

    <LinearLayout
        android:id="@+id/game_modes_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_skins"
        android:background="@color/primary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="GAME MODE"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/game_modes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@id/game_modes_text"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:id="@+id/win_score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_modes"
        android:background="@color/primary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="WIN SCORE"/>
    </LinearLayout>

    <EditText
        android:id="@+id/win_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:inputType="number"
        android:textSize="20sp"
        android:maxLines="1"
        android:layout_below="@id/win_score_text"
        android:selectAllOnFocus="true"
        android:text="3000"/>

    <LinearLayout
        android:id="@+id/select_players_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/win_score"
        android:background="@color/primary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="SELECT PLAYERS"/>
    </LinearLayout>

</RelativeLayout>